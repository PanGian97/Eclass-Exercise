<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/students_view"
        android:layout_width="163dp"
        android:layout_height="171dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/lb_action_text_color"
        android:backgroundTint="@color/lb_action_text_color"
        android:scaleType="fitXY"
        android:src="@drawable/students"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/students_adder"
        app:layout_constraintVertical_bias="0.16000003" />

    <ImageButton
        android:id="@+id/students_adder"
        android:layout_width="163dp"
        android:layout_height="171dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/lb_action_text_color"
        android:backgroundTint="@color/lb_action_text_color"
        android:scaleType="fitXY"
        android:src="@drawable/student_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline7"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <ImageButton
        android:id="@+id/lessons_adder"
        android:layout_width="163dp"
        android:layout_height="171dp"
        android:layout_marginRight="10dp"
        android:background="@color/lb_action_text_color"
        android:backgroundTint="@color/lb_action_text_color"
        android:scaleType="fitXY"
        android:src="@drawable/add_lesson_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/lessons_view"
        app:layout_constraintVertical_bias="0.161" />

    <ImageButton
        android:id="@+id/lessons_view"
        android:layout_width="163dp"
        android:layout_height="171dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/lb_action_text_color"
        android:backgroundTint="@color/lb_action_text_color"
        android:scaleType="fitXY"
        android:src="@drawable/lessons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/guideline7"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.18" />

    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#00070202"
        android:text="E-CLASS APP"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="Add student"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="@+id/students_adder"
        app:layout_constraintStart_toStartOf="@+id/students_adder"
        app:layout_constraintTop_toBottomOf="@+id/students_adder" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="All students"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="@+id/students_view"
        app:layout_constraintStart_toStartOf="@+id/students_view"
        app:layout_constraintTop_toBottomOf="@+id/students_view" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="Add lesson"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="@+id/lessons_adder"
        app:layout_constraintStart_toStartOf="@+id/lessons_adder"
        app:layout_constraintTop_toBottomOf="@+id/lessons_adder" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="All lessons"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="@+id/lessons_view"
        app:layout_constraintStart_toStartOf="@+id/lessons_view"
        app:layout_constraintTop_toBottomOf="@+id/lessons_view" />


</androidx.constraintlayout.widget.ConstraintLayout>